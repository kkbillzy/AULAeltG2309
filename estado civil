#include <stdio.h>

int main() {
    char estados;

    printf("Diga seu estado civil, usando as letras s, c, d ou v: ");
    scanf(" %c", &estados);

    if (estados == 's') {
        printf("SOLTEIRO\n");
    } 
    else if (estados == 'c') {
        printf("CASADO\n");
    } 
    else if (estados == 'd') {
        printf("DIVORCIADO\n");
    } 
    else if (estados == 'v') {
        printf("VIUVO\n");
    } 
    else {
        printf("Opção inválida!\n");
    }

    return 0; 
}
