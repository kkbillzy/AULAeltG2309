#include<stdio.h>
#include <math.h>

int main() {
float n1,n2,n3,n4, m;

printf("Digite a nota do Primeiro Bimestre:");
scanf("%f" ,&n1);
printf("Digete a nota do Segundo Bimestre:");
scanf("%f", &n2);
printf("Digite a nota do Terceiro Bimestre:");
scanf("%f" ,&n3);
printf("Digite a nota do Quarto Bimestre:");
scanf("%f" ,&n4);

m = (n1 + n2 + n3 +n4)/4;

if (m >= 7) {
    printf("APROVADO");

}else if (m >= 4 && m <= 7){
    printf("RECUPERAÃ‡AO!");

}else if (m < 4){
    printf("PROVA FINAL!");
}



   }
